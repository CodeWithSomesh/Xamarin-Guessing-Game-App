<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Guessing_Game_App.Page2"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="WellDone_Image.jpg" VerticalOptions="Fill" HeightRequest="500"></Image>
            <Button 
                VerticalOptions="Center" 
                Text="Return To Home Page"
                TextColor="HotPink"
                BackgroundColor="Black"
                BorderColor="HotPink"
                BorderWidth="1.5"
                CornerRadius="50"
                Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>